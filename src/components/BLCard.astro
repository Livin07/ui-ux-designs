---
import image from "../assets/img1 (1).jpg";
import { Image } from "astro:assets";
---

<div class="container">
  <div class="image-container"><Image src={image} alt="" /></div>
  <div class="text">
    <div class="title">
      LSD is synthesized for first time by Swiss chemist Albert Hofman And by
      mainy others
    </div>
    <div class="subtitle">DESIGN HISTORY</div>
  </div>
  <div class="chip">
    1947
  </div>
</div>

<style>
  .container {
    position: relative;
    width: 100%;
    height: 100%;
  }
  .text {
    overflow: hidden;
    height: 35%;
  }
  .title {
    font-size: 1.2rem;
    font-weight: 700;
    height: 75%;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
  }
  .image-container {
    width: 100%;
    height: 65%;
  }
  .image-container img {
    border-radius: 7px;
    width: 100%;
    height: 100%;
    object-fit: cover;
    -webkit-mask-image: -webkit-gradient(
      linear,
      left top,
      left bottom,
      from(rgba(0, 0, 0, 1)),
      to(rgba(0, 0, 0, 0))
    );
  }
  .subtitle {
    color: gray;
    font-weight: 600;
    font-size: 0.8rem;
    height: 25%;
    padding-top: 10px;
  }
  .chip{
    position: absolute;
    top: 50%;
    padding: 5px 15px;
    border-radius: 80px;
    color: gray;
    font-size: 0.8rem;
    border: 1px solid gray;
  }
</style>
