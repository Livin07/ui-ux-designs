---
import { Image } from 'astro:assets';
import background from '../assets/bgicon.png'
---

<div class="container">
  <div class="bg"><Image src={background} alt='' /></div>
  <div class="title"><span>Where designers get their news</span></div>
  <div class="profile">
    <div class="image">
      <img src="https://picsum.photos/200/300" alt="" />
    </div>
    <div class="name-container">
      <div class="name">Cole Derochie</div>
      <div class="id">@colederochie</div>
    </div>
  </div>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    position: relative;
  }
  .bg{
    position: absolute;
    opacity: 0.2;
    transform: translateX(50%);
  }
  .title {
    font-size: 28px;
    font-weight: 600;
    width: 75%;
  }
  .profile {
    height: 25%;
    display: flex;
    gap: 16px;
    /* background-color: #000; */
  }
  .image {
    aspect-ratio: 1/1;
    width: 20%;
  }
  .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }
  .name-container {
    display: flex;
    justify-content: center;
    flex-direction: column;
    gap: 3px;
  }
  .name {
    font-weight: 600;
  }
  .id {
    color: #7c7c7c;
    font-weight: 600;
  }
</style>
