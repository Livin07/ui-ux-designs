---
import Design from "./Design.astro";
import TextChange from "../components/TextChange.astro";
import Date from "./Date.astro";
import BRCard from "./BRCard.astro";
import IconPair from "./IconPair.astro";
import ScrollImage from "./ScrollImage.astro";
import SliderCard from "./SliderCard.astro";
---

<div class='container'>
  <!-- row one -->
  <div class='row'>
    <div class='items row-1-top'>
      <TextChange />
    </div>
    <div class='items row-1'>
      <Design />
    </div>
    <div class='items row-1'></div>
  </div>
  <!-- row-2 -->
  <div class='row'>
    <div class='row-2-top'>
      <div class='row2-item'><IconPair /></div>
      <div class='row2-item'><Date /></div>
    </div>
    <div class='items row-1'>
      <ScrollImage />
    </div>
    <div class='row-2-bottom'>
      <div class='row2-item-down'></div>
      <div class='row2-item-down2'>
        <marquee>TODAY IS A BUSY NEWS DAY</marquee>
      </div>
    </div>
  </div>
  <!-- row-3 -->
  <div class='row'>
    <div class='items row-1'><SliderCard /></div>
    <div class='row3-item-down'><BRCard /></div>
  </div>
</div>

<style>
