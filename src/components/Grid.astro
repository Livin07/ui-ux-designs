    100% {
      transform: translateX(100%);
    }
  }
  .row {
    width: 300px;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .items {
    background-color: rgb(230, 230, 230);
    border-radius: 10px;
    padding: 10px;
  }
  .row-1 {
    flex: 1;
    overflow: hidden;
  }
  .row-1-top {
    height: 10%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .row-2-top {
    display: flex;
    gap: 1rem;
    height: 10%;
    background-color: none;
  }
  .row2-item {
    background-color: rgb(230, 230, 230);
    border-radius: 10px;
    padding: 10px;
    flex: 1;
    width: 50%;
  }
  .row-2-bottom {
    display: flex;
    height: 10%;
    gap: 1rem;
  }
  .row2-item-down {
    background-color: rgb(72, 237, 72);
    border-radius: 10px;
    padding: 10px;
    width: 25%;
  }
  .row2-item-down2 {
    background-color: rgb(230, 230, 230);
    border-radius: 10px;
    padding: 10px;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .row3-item-down {
    background-color: rgb(230, 230, 230);
    border-radius: 10px;
    padding: 10px;
    height: 35%;
    overflow: hidden;
  }
  marquee {
    font-weight: 700;
